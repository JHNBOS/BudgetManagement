@model Invoice.factuur

@{
    ViewBag.Title = "Factuur Verwijderen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Factuur verwijderen</h2>

<h3>Weet u zeker dat u deze factuur wilt verwijderen?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Raw("Debiteur")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.debiteuren.Voornaam)
            @Html.Raw(" ")
            @Html.DisplayFor(model => model.debiteuren.Achternaam)
        </dd>

        <dt>
            @Html.Raw("Product")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.producten.Naam)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Prijs)
        </dt>

        <dd>
            @Html.Raw("€")
            @Html.DisplayFor(model => model.Prijs)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Datum)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Datum)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-primary" /> |
            @Html.ActionLink("Terug naar de lijst", "Index")
        </div>
    }
</div>
