@model IEnumerable<Invoice.bezit>

@{
    ViewBag.Title = "Toewijzen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wijs product toe aan debiteur</h2>

<p>
    @Html.ActionLink("Toewijzen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Raw("Debiteur")
        </th>
        <th>
            @Html.Raw("Product")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.debiteuren.Voornaam)
            @Html.Raw(" ")
            @Html.DisplayFor(modelItem => item.debiteuren.Achternaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.producten.Naam)
        </td>
        <td>
            @Html.ActionLink("Aanpassen", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Inzien", "Details", new { id=item.ID }) |
            @Html.ActionLink("Verwijderen", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
